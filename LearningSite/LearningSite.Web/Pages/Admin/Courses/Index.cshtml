@model LearningSite.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست دوره های سایت
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form>
                        <div class="row">

                            <div class="col-sm-5 col-md-5">
                                <input type="text" name="FilterTitle" class="form-control" placeholder="نام کاربری" />
                            </div>
                            <div class="col-sm-2 col-md-2">
                                <button type="submit" class="btn btn-info">بگرد</button>
                                <a class="btn btn-default btn-sm" href="/Admin/Courses">خالی</a>
                            </div>

                        </div>
                     </form>>
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>

                        </div>

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان دوره</th>
                                    <th>تعداد جلسه</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ShowCourseForAdminViewModels.Item1)
                                {
                                    <tr>
                                        <td>
                                            <img src="/course/thumb/@item.ImageName" class="thumbnail" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.EpisodeCount
                                        </td>
                                        <td>
                                            <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-danger btn-sm">
                                                افزودن بخش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
