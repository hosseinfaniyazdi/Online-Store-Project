                                    @for (int i = 1; i <= (int)Model.ShowCourseForAdminViewModels.Item2; i++)
                                    {
                                        <li class="page-item"><a href="/Admin/Courses?PageId=@i">@i</a></li>

                                    }
                                </ul>
                            </nav>
                        }

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
